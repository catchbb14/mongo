<!-- Content
============================================= -->
<section id="content">
    <div class="content-wrap">
        <div class="container clearfix">
            <div class="row clearfix">
                <!-- Posts Area
                ============================================= -->
                <div class="row clearfix">
                    {{#each articles}}
                        <div class="col-md-6 mt-4">
                        <article class="ipost">
                            <div class="entry-image mb-3">
                                <a href={{this.link}}><img src={{this.image}} alt=""></a>
                                <div class="entry-categories"><a class="bg-travel">Saved</a></div>
                            </div>
                            <div class="entry-title">
                                <h4 class="t600"><a href={{this.link}}>{{this.title}}</a></h4>
                            </div>
                            <div class="entry-content mt-0 clearfix">
                                <p>{{this.summary}}</p>
                                <hr>
                            </div>
                            <div class="entry-content mt-0 clearfix">
                                <h5 class="t400">Comments:</h5>
                                <ul class="entry-comments clearfix list-group mt-0 mb-3">
                                    {{#each this.comments}}
                                        <li class="list-group-item">
                                            <p>{{this.body}}</p>
                                        </li>
                                    {{/each}}
                                </ul>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control commentText" placeholder="Add Comment" aria-label="comment">
                                </div>
                                <ul class="entry-btn clearfix float-right list-group">
                                    <li class="list-group-item" style="border:none;">
                                        <button type="submit" data-id="{{this._id}}" class="btn btn-warning addComment">Add Comment</button>
                                        <button type="button" data-id="{{this._id}}" class="btn btn-danger deleteSaved">Delete</button>
                                    </li>
                                </ul>
                            </div>
                        </article>
                    </div>
                    {{/each}}
                </div>
            </div>  
        </div>
    </div>
</section>









