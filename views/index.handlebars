		{{> slider }}
		
		<!-- Content
		============================================= -->
		<section id="content">

			<div class="content-wrap">

				<div class="container clearfix">

					<div class="row clearfix">
                        <!-- Posts Area
						============================================= -->
						<div class="col-lg-12">

							<!-- Scraped Articles
							============================================= -->
							<nav class="navbar navbar-expand-lg navbar-light p-0">
								<h4 class="mb-0 pr-2 ls1 uppercase t700">Latest News</h4>
								<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler1" aria-controls="navbarToggler1" aria-expanded="false" aria-label="Toggle navigation">
									<i class="icon-line-menu"></i>
								</button>

								<div class="collapse navbar-collapse justify-content-between" id="navbarToggler1">
									<div></div>
									<ul class="nav nav-sm navbar-nav mr-md-auto mr-lg-0 mt-2 mt-lg-0 align-self-end" role="tablist">
										<li class="nav-item">
											<a class="nav-link bg-color-travel active" id="nav-all-tab" data-toggle="tab" href="#nav-all" role="tab" aria-selected="true">All</a>
										</li>
										<li class="nav-item">
											<a class="nav-link bg-color-food" id="nav-save-tab" href="/saved" role="tab" aria-selected="false">Saved</a>
										</li>
									</ul>
								</div>
							</nav>
							<!-- Tab Content
							============================================= -->
							<div class="line line-xs line-dark"></div>
							<div class="tab-content" id="nav-tabContent">
								<!-- Tab Content 1
								============================================= -->
								<div class="tab-pane fade show active" id="nav-outdoor" role="tabpanel" aria-labelledby="nav-outdoor-tab">
									<div class="row clearfix">
										<div class="col-lg-6">
											<!-- Post Article -->
											<article class="entry nobottomborder nobottommargin">
												<div class="entry-image mb-3">
													<img src={{articles.[0].image}} alt={{articles.[0].title}}>
												</div>
												<div class="entry-title">
													<h3>{{articles.[0].title}}</h3>
												</div>
												<ul class="entry-meta clearfix">
													<li>
														<button data-id={{articles.[0]._id}} class="button saveEvent"><i class="icon-bookmark"></i></button> 
													</li>
												</ul>
												<div class="entry-content clearfix">
													<p>{{articles.[0].summary}}</p>
												</div>
											</article>
										</div>
										<div class="col-lg-6">
											<!-- Post Article -->
											{{#each articles}}
												<article class="spost clearfix">
													<div class="entry-image">
														<a href={{this.link}}><img src={{this.image}} alt=""></a>
													</div>
													<div class="entry-c">
														<div class="entry-title">
															<h4 class="t600"><a href={{this.link}}>{{this.title}}</a></h4>
														</div>
														<ul class="entry-meta clearfix">
															{{#unless this.saved}}
																<li>
																	<button data-id={{this._id}} class="button button-small saveEvent"><i class="icon-bookmark"></i></button> 
																</li>
															{{/unless}}
														</ul>
													</div>
												</article>
											{{/each}}
											<!-- Post Article -->
										
										</div>
									</div>
								</div>
							</div><!-- Tab End -->
                        </div>
					</div>
                </div>
            </div>
        </section>